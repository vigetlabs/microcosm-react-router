#!/bin/bash

# Perform code formatting checks and execute the test suite.
#
# Run this command with:
#   ./bin/test
# Or
#   ./bin/test URL

# load the .env file
if [ ! "$CIRCLECI" == true ]; then
  source .env
fi

# Perform a more comprehensive lint
yarn lint

# Then run tests
echo Running tests against $PUBLIC_PATH

PUBLIC_PATH=$1 yarn test
